.root
  width 100%
  flex-direction column
  padding 0 1u

.game
  padding 1u

.types
  margin-top 1u

.type, .capitulate
  width 5u
  height 5u

.capitulate
  margin-left 2u

.gameInfo
  margin-top 1u
  width 50u
  border-top 1px solid $UI.colors.colorGray
  border-right 1px solid $UI.colors.colorGray

.row
  border-bottom 1px solid $UI.colors.colorGray

.cell, .headcell
  padding 1u
  border-left 1px solid $UI.colors.colorGray

.headcell
  font-weight bold

.result
  margin-top 1u
  font-size 20px
  font-weight bold

.win
  color $UI.colors.colorGreen
.lose
  color $UI.colors.colorRed
.draw
  color $UI.colors.colorGray

.gameStatus
  font-size 20px
  font-weight bold